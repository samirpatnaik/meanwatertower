<html>

<head>
  <meta http-equiv="Content-Type" content="text/html; charset=windows-1252">
  <title>Water Tower</title>

  <link href="/css/style.css" rel="stylesheet" type="text/css" />

  <link rel="stylesheet" type="text/css" href="/css/accordian_leftside.css">
  <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.1.3.min.js"></script>
  <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.0/jquery.validate.min.js"></script>
  <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.0/additional-methods.min.js"></script>
  <script>
    $(function() {
      $( "#mytestform" ).validate({
        rules: {
          newpwd :"required",
          confirmpassword:{
            equalTo: "#newpwd"
          }
        },
        messages: {
          newpwd :" Enter Password",
          confirmpassword :" Enter Confirm Password Same as Password"
        }
      });
    });
  </script>

</head>

<body>
<div align="center">
  <table width="1100" border="0" cellpadding="0" cellspacing="0" height="100%">
    <tr>
      <td height="90" align="center" valign="middle" background="/images/headerbg.jpg">{{> header}}</td>
    </tr>


    <tr>
      <td align="left" valign="top"><table width="1100" border="0" cellspacing="0" cellpadding="0" height="100%">
          <tr>
            <td width="250" align="left" valign="top" bgcolor="#dedede">{{> menu}}</td>
            <td width="850" align="left" valign="top" bgcolor="#FFFFFF">&nbsp;
              <div align="center">
                <table border="0" width="98%">
                  <tr>
                    <td align="left" width="100%" valign="top" bgcolor="#382E2A" style="padding:7px 0px 7px 10px" class="content3">
                      Change Password</td>
                  </tr>
                  <tr>
                    <td align="left" width="100%" valign="top">
                      <form name="mytestform" method="POST" action="changepassword" id="mytestform">
                        <div align="center">
                          <table width="98%" id="table6" cellspacing="0" cellpadding="0"  style="padding-left: 4px; padding-right: 4px; padding-top: 1px; padding-bottom: 1px">
                            {{#if message}}
                              <tr>
                                  <td align="center" height="10" colspan="2" style="padding-top: 10px">
                                      <div class="alert alert-danger">{{ message }}</div>
                                  </td>
                              </tr>
                            {{/if}}
                            <tr>
                              <td width="27%" align="right" height="35" class="content1" style="padding-right: 5px">
                                User Name</td>
                              <td width="73%" style="padding-left: 5px;font-family:Verdana, Arial, Helvetica, sans-serif;font-size:12px;color:#FF0000;" height="35" align="left">
                                <input type="text" class="required" name="uname" size="40" value="{{ username }}" readonly></td>
                            </tr>
                            <tr>
                              <td width="27%" align="right" height="35" class="content1" style="padding-right: 5px">Old Password</td>
                              <td width="73%" style="padding-left: 5px;font-family:Verdana, Arial, Helvetica, sans-serif;font-size:12px;color:#FF0000;" height="35" align="left">
                                <input type="password" name="oldpwd" size="40" class="required"></td>
                            </tr>
                            <tr>
                              <td width="27%" align="right" height="35" class="content1" style="padding-right: 5px">
                                New Password</td>
                              <td width="73%" style="padding-left: 5px;font-family:Verdana, Arial, Helvetica, sans-serif;font-size:12px;color:#FF0000;" height="35" align="left">
                                <input type="password" name="newpwd" id="newpwd" size="40"></td>
                            </tr>
                            <tr>
                              <td width="27%" align="right" height="35" class="content1" style="padding-right: 5px">Retype New Password</td>
                              <td width="73%" style="padding-left: 5px;font-family:Verdana, Arial, Helvetica, sans-serif;font-size:12px;color:#FF0000;" height="35" align="left">
                                <input type="password" name="confirmpassword" id="confirmpassword" size="40"></td>
                            </tr>
                            <tr>
                              <td width="27%" align="right" height="35">&nbsp;</td>
                              <td width="73%" height="35" style="padding-left: 5px" align="left">
                                <input type="image" name="imageField" id="imageField" src="/images/submit.png"></td>
                            </tr>

                          </table>
                        </div>
                      </form>
                    </td>
                  </tr>
                </table></div>
            </td>
          </tr>
        </table></td>
    </tr>
    <tr>
      <td height="15" align="center" valign="top" bgcolor="#382e2a"></td>
    </tr>
  </table>
</div>
</body>

</html>
