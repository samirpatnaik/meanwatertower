<html>

<head>
  <meta http-equiv="Content-Type" content="text/html; charset=windows-1252">
  <title>Water Tower</title>

  <link href="/css/style.css" rel="stylesheet" type="text/css" />

  <link rel="stylesheet" type="text/css" href="/css/accordian_leftside.css">

  <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.1.3.min.js"></script>
  <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.0/jquery.validate.min.js"></script>
  <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.0/additional-methods.min.js"></script>
  <script>
    $(function() {
      $( "#mytestform" ).validate({
        rules: {
          heading_text :"required",
          subheading_text : "required",
          phone_text : "required",
          phone_text1 :  "required",
          email_text : "required email",
          social1 : "required",
          social2 : "required",
          social3 : "required",
          social4 : "required"
        }
      });
    });
  </script>
</head>

<body>
<div align="center">
  <table width="1100" border="0" cellpadding="0" cellspacing="0" height="100%">
    <tr>
      <td height="90" align="center" valign="middle" background="/images/headerbg.jpg">{{> header}} </td>
    </tr>
    <tr>
     
    </tr>


    <tr>
      <td align="left" valign="top"><table width="1100" border="0" cellspacing="0" cellpadding="0" height="100%">
          <tr>
            <td width="250" align="left" valign="top" bgcolor="#dedede">{{> menu}}</td>
            <td width="850" align="left" valign="top" bgcolor="#FFFFFF">&nbsp;
              <div align="center">
                <table border="0" width="98%">
                  <tr>
                    <td align="left" width="100%" valign="top" bgcolor="#382E2A" style="padding:7px 0px 7px 10px" class="content3">
                      Manage Contact Us Page Text</td>
                  </tr>
                  <tr>
                    <td align="left" width="100%" valign="top">

                      <form action="" method="POST" name="mytestform" id="mytestform">

                        <table width="100%" id="table6" cellspacing="0" cellpadding="0" class="content_black" style="padding-left: 4px; padding-right: 4px; padding-top: 1px; padding-bottom: 1px">
                          {{#if message}}
                          <tr>
                            <td align="center" height="20" colspan="2" class="err" style="padding-top: 10px">
                              <div class="alert alert-danger">{{ message }}</div>
                            </td>
                          </tr>
                          {{/if}}
                          <tr>
                            <td width="22%" align="right" height="35" class="content1" style="padding-right: 5px">
                              Heading Text</td>
                            <td width="78%" style="padding-left: 5px;font-family:Verdana, Arial, Helvetica, sans-serif;font-size:12px;color:#FF0000;" height="35" align="left">
                              <input type="hidden"  name="rid" value="{{ rid }}">
                              <input type="text"  name="heading_text" size="50" class="required" value="{{ heading }}"></td>
                          </tr>


                          <tr>
                            <td width="22%" align="right" height="35" class="content1" style="padding-right: 5px" valign="top">
                              Subheading text</td>
                            <td width="78%" style="padding-left: 5px;font-family:Verdana, Arial, Helvetica, sans-serif;font-size:12px;color:#FF0000;" height="50" align="left" valign="top">
                              <textarea rows="5" name="subheading_text" cols="50" class="required">{{ subheading }}</textarea></td>
                          </tr>


                          <tr>
                            <td width="22%" align="right" height="35" class="content1" style="padding-right: 5px">
                              Phone Number</td>
                            <td width="78%" style="padding-left: 5px;font-family:Verdana, Arial, Helvetica, sans-serif;font-size:12px;color:#FF0000;" height="35" align="left">
                              <input type="text" name="phone_text" size="50" class="required" value="{{ phone }}"></td>
                          </tr>


                          <tr>
                            <td width="22%" align="right" height="35" class="content1" style="padding-right: 5px">
                              Phone Number</td>
                            <td width="78%" style="padding-left: 5px;font-family:Verdana, Arial, Helvetica, sans-serif;font-size:12px;color:#FF0000;" height="35" align="left">
                              <input type="text" name="phone_text1" size="50" class="required" value="{{ phone1 }}"></td>
                          </tr>


                          <tr>
                            <td width="22%" align="right" height="35" class="content1" style="padding-right: 5px">
                              Email Address</td>
                            <td width="78%" style="padding-left: 5px;font-family:Verdana, Arial, Helvetica, sans-serif;font-size:12px;color:#FF0000;" height="35" align="left">
                              <input type="text" name="email_text" size="50" class="required email" value="{{ email }}"></td>
                          </tr>

                          <tr>
                            <td width="22%" align="right" height="35" class="content1" style="padding-right: 5px" valign="top">
                              Address</td>
                            <td width="78%" style="padding-left: 5px;font-family:Verdana, Arial, Helvetica, sans-serif;font-size:12px;color:#FF0000;" height="35" align="left" valign="top">
                             <textarea name="details" id="S1" cols="50" rows="8">{{ details }}</textarea></td>
                          </tr>
                          <tr>
                            <td width="22%" align="right" height="35" class="content1" style="padding-right: 5px">
                              Facebook URL</td>
                            <td width="78%" style="padding-left: 5px;font-family:Verdana, Arial, Helvetica, sans-serif;font-size:12px;color:#FF0000;" height="35" align="left">
                              <input type="text" name="social1" size="50" class="required" value="{{ social1 }}"></td>
                          </tr>


                          <tr>
                            <td width="22%" align="right" height="35" class="content1" style="padding-right: 5px">
                              Pintrest URL</td>
                            <td width="78%" style="padding-left: 5px;font-family:Verdana, Arial, Helvetica, sans-serif;font-size:12px;color:#FF0000;" height="35" align="left">

                              <input type="text" name="social2" size="50" class="required" value="{{ social2 }}"></td>
                          </tr>


                          <tr>
                            <td width="22%" align="right" height="35" class="content1" style="padding-right: 5px">
                              Instagram URL</td>
                            <td width="78%" style="padding-left: 5px;font-family:Verdana, Arial, Helvetica, sans-serif;font-size:12px;color:#FF0000;" height="35" align="left">

                              <input type="text" name="social3" size="50" class="required" value="{{ social3 }}"></td>
                          </tr>


                          <tr>
                            <td width="22%" align="right" height="35" class="content1" style="padding-right: 5px">
                              Google Plus URL</td>
                            <td width="78%" style="padding-left: 5px;font-family:Verdana, Arial, Helvetica, sans-serif;font-size:12px;color:#FF0000;" height="35" align="left">

                              <input type="text" name="social4" size="50" class="required" value="{{ social4 }}"></td>
                          </tr>


                          <tr>
                            <td width="22%" align="right" height="35">&nbsp;</td>
                            <td width="78%" height="35" style="padding-left: 5px" align="left">
                              <input type="image" name="imageField" id="imageField" src="/images/submit.png"></td>
                          </tr>
                          <tr>
                            <td align="right" height="35">&nbsp;</td>
                            <td height="35" style="padding-left: 5px" align="left">&nbsp;</td>
                          </tr>
                          <tr>
                            <td colspan="2" align="right" width="100%" class="content">
                              &nbsp;</td>
                          </tr>
                        </table>
                      </form>

                    </td>
                  </tr>
                </table>
              </div>

            </td>
          </tr>
        </table></td>
    </tr>
    <tr>
      <td height="15" align="center" valign="top" bgcolor="#382e2a"></td>
    </tr>
  </table>
</div>
</body>

</html>
